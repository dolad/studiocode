{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                          
    "lib": ["es6"],                                 
    "allowJs": true,                                
    "outDir": "build",                              
    "rootDir": "src",                               
    "strict": true,                                 
    "noImplicitAny": true,                          
    "esModuleInterop": true,                        
    "resolveJsonModule": true,                      
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration":true    
  },
  "exclude": [
    "node_modules", "dist", "test", "jest.config.js","build"// This is what fixed it!
]
}
